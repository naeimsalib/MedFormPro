@{
    ViewData["Title"] = "Home";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 mb-4">
            <div class="card-body text-center py-5">
                <h1 class="display-5 fw-bold mb-3"><i class="fa fa-prescription-bottle-alt text-primary me-2"></i>Welcome to MedFormPro</h1>
                <p class="lead mb-4">A modern platform for managing prescriptions, reviews, and deliveries in a secure, collaborative environment.</p>
                <hr class="my-4" />
                <h4 class="mb-3">Try the Demo</h4>
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <form id="demo-pharmacist" asp-controller="Account" asp-action="Login" method="post">
                        <input type="hidden" name="Email" value="pharmacist1@medformpro.com" />
                        <input type="hidden" name="Password" value="pharmacist123!" />
                        <input type="hidden" name="RememberMe" value="false" />
                        <button type="submit" class="btn btn-outline-primary btn-lg px-4"><i class="fa fa-mortar-pestle me-2"></i>Demo as Pharmacist</button>
                    </form>
                    <form id="demo-reviewer" asp-controller="Account" asp-action="Login" method="post">
                        <input type="hidden" name="Email" value="reviewer1@medformpro.com" />
                        <input type="hidden" name="Password" value="reviewer123!" />
                        <input type="hidden" name="RememberMe" value="false" />
                        <button type="submit" class="btn btn-outline-success btn-lg px-4"><i class="fa fa-user-check me-2"></i>Demo as Reviewer</button>
                    </form>
                    <form id="demo-delivery" asp-controller="Account" asp-action="Login" method="post">
                        <input type="hidden" name="Email" value="delivery1@medformpro.com" />
                        <input type="hidden" name="Password" value="delivery123!" />
                        <input type="hidden" name="RememberMe" value="false" />
                        <button type="submit" class="btn btn-outline-warning btn-lg px-4 text-dark"><i class="fa fa-truck me-2"></i>Demo as Delivery</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row g-4 py-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5 mb-3">
                        <i class="bi bi-capsule me-2"></i>Pharmacists
                    </h3>
                    <p class="card-text">Create and submit prescriptions through our streamlined digital system. Easily input patient information, medication details, and specific instructions.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5 mb-3">
                        <i class="bi bi-clipboard-check me-2"></i>Review Team
                    </h3>
                    <p class="card-text">Efficiently review and process submitted prescriptions. Approve or deny prescriptions based on comprehensive information and maintain quality control.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5 mb-3">
                        <i class="bi bi-truck me-2"></i>Delivery Team
                    </h3>
                    <p class="card-text">Track and manage prescription deliveries. Update shipment status from fulfillment to delivery, ensuring transparent communication throughout the process.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8 mx-auto">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h4 class="mb-3">Key Features</h4>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Secure Role-Based Access Control</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Real-Time Prescription Tracking</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Streamlined Review Process</li>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Comprehensive Delivery Management</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
